<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="icon" href="./img/light-logo.png">
    <link rel="stylesheet" href="/css/Signup.css">
    <link rel="stylesheet" href="/css/AddProduct.css">
</head>
<body>

    <% console.log(Product) %>
    
      <form action="/admin/<%= Product.id %>/edit" method="POST">
    <img src="img/loader.gif" alt="" class="loader">
    <div class="alert-box">
        <img src="./img/error.png" class="alert-img" alt="">
        <p class="alert-msg">error message</p>
    </div>

    <img src="img/Logo.png" alt="" class="logo">
    <div class="form">
        <input type="text" name="product_name" id="product_name" placeholder="<%= Product.product_name %>"/>
        <input type="text" name="product_surname" id="product_surname" placeholder="<%= Product.product_surname %>"/>
        <input type="text" name="description" id="description" placeholder="<%= Product.description %>"/>

        <!-- product image-->
        <div class="product-info">
            <div class="product-image"><p class="text">product image</p></div>
            <div class="upload-image-sec">
                <!-- upload inputs-->
                <p class="text"><img src="img/camera.png" alt="">upload image</p>
                <div class="upload-catalouge">
                   
                        <div> <input class="test" type="file" name="someExpressFiles" multiple="multiple" /></div>
                       
                      
                </div>
            </div>
            <div class="select-sizes">
                <p class="text">categories</p>
               
                <div class="sizes">
              
                    <input type="checkbox" class="size-checkbox" id="xs" value="">
                    
                </div>
                
            </div>
        </div>

        <input type="number" name="quantity" id="quantity" placeholder="<%= Product.quantity %>"/>
        <input type="text" name="country" id="country" placeholder="<%= Product.country %>"/>
        <input type="number" name="price" id="price" placeholder="<%= Product.price %>"/>

        <div class="buttons">
            <button class="btn" id="add-btn">save changes</button>
            <button class="btn" id="save-btn">save draft</button>
        </div>
    </div>
</form>
<script src="js/token.js"></script>


</body>
</html>